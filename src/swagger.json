{
    "openapi": "3.0.0",
    "info": {
        "title": "Solid Rest API",
        "description": "Una API Rest utilizando conceptos S.O.L.I.D",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },

    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/auth":{
            "post": {
                "summary": "Obtener un token",
                "description": "Obtener un token para autenticacion",
                "tags": ["Authentication"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                               "user": {
                                   "value": {
                                    "email": "john@example.com",
                                    "password": "mystrongpass"
                                   }
                               } 
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Correo y/o password incorrecto(s)"
                    },
                    "201": {
                        "description": "Token Generado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "properties": {
                                        "accessToken":{
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/token":{
            "post": {
                "summary": "Obtener un nuevo token",
                "description": "Obtener un nuevo token a partir de un refresh token",
                "tags": ["Authentication"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "token": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "401":{
                        "description": "Refresh Token invalido!"
                    },
                    "201": {
                        "description": "Generado nuevo token",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "accessToken":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "post": {
                "summary": "Registrar un usuario",
                "description": "Registro de un nuevo usuario",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                               "user": {
                                   "value": {
                                    "name": "John",
                                    "email": "john@example.com",
                                    "password": "mystrongpass"
                                   }
                               } 
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado con Ã©xito"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            },
            "get": {
                "summary": "Obtener usuarios",
                "description": "Obtener todos los usuarios",
                "tags": ["Users"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de usuarios registrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{id}":{
            "get":{
                "summary":"Obtener usuario",
                "description": "Obtener un usuario por medio de su ID",
                "tags": ["Users"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario filtrado por ID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Necesita realizar login"
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            },
            "put":{
                "summary":"Altera un usuario",
                "description": "Altera un usuario por medio de su ID",
                "tags": ["Users"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                               "user": {
                                   "value": {
                                    "name": "John",
                                    "email": "john@example.com",
                                    "password": "mystrongpass"
                                   }
                               } 
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Usuario Alterado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Necesita realizar login"
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            },
            "delete":{
                "summary":"Elimina un usuario",
                "description": "Elimina un usuario por medio de su ID",
                "tags": ["Users"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario eliminado"
                    },
                    "401": {
                        "description": "Necesita realizar login"
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            }
        }
        
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties":{
                    "id":{
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
    
}
